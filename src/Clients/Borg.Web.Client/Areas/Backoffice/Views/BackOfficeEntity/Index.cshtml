@model Borg.System.Backoffice.Lib.EntityGridViewModel
@{
    ViewBag.Title = Model.Title;
}

<div class="row">
    <div class="col-md-3">
        <div class="box box-default collapsed-box">
            <div class="box-header with-border">
                <h3 class="box-title">Expandable</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-plus"></i>
                    </button>
                </div>
                <!-- /.box-tools -->
            </div>
            <!-- /.box-header -->
            <div class="box-body" style="display: none;">
                The body of the box
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <partial name="~/Areas/Backoffice/Views/BAckOfficeEntity/ColumnSelection.cshtml" model="@Model" />
</div>

@section bottomscripts{

<script type="text/javascript">
    $(function () {
        $('.header-list').sortable({
            placeholder: "sort-highlight",
            change: function (event, ui) {
            }
        });
        $('.header-list').disableSelection();

        $("#SetColumnSelectionForm").submit(function (event) {
            var idsInOrder = $(".header-list").sortable("toArray");
            console.log(idsInOrder);
            $("#reorderColumns").val(idsInOrder.toString());
        });
    });
</script>
}