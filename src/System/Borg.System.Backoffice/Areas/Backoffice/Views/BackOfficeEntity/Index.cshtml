@section bottomscripts{

<script type="text/javascript">
    $(function () {
        $('.header-list').sortable({
            placeholder: "sort-highlight",
            change: function (event, ui) {
            }
        });
        $('.header-list').disableSelection();

        $("#SetColumnSelectionForm").submit(function (event) {
            var idsInOrder = $(".header-list").sortable("toArray");
            console.log(idsInOrder);
            $("#reorderColumns").val(idsInOrder.toString());
        });
    });
</script>
}